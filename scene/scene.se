(:class "red"    () :color (1 0 0))
(:class "green"  () :color (0 1 0))
(:class "blue"   () :color (0 0 0))
(:class "purple" () :color (.6 0.3 .6))

(:class "block" () :shape :box :dimension (.1 .1 .1) :affords ("move") :alpha 1)
(:class "table" ("purple") :shape :box :dimension (1 2 .01) :alpha .8 :affords ("stack"))

(:object "back-table" :class ("table") :translation (-.80 0 0))
(:object "front-table" :class ("table") :translation (.80 0 0))


(:object "block-a"  :class ("block" "green") :translation (0 -.2 .05) :parent "front-table")
(:object "block-b"  :class ("block" "green") :translation (0 -.4 .05) :parent "front-table")

