;;;;;;;;;;;;;;;
;;; Classes ;;;
;;;;;;;;;;;;;;;

;; Colors
(:class "red"    () :color (1 0 0))
(:class "green"  () :color (0 1 0))
(:class "blue"   () :color (0 0 0))
(:class "purple" () :color (.6 0.3 .6))

;; Object Types
(:class "block" () :shape :box :dimension (.1 .1 .1) :alpha 1 :affords ("move"))
(:class "table" ("purple") :shape :box :dimension (1 2 .01) :alpha .8 :affords ("stack"))

;;;;;;;;;;;;;;;
;;; Objects ;;;
;;;;;;;;;;;;;;;

;; Tables
;(:object "back-table" :class ("table") :translation (-.80 0 0))
(:object "front-table" :class ("table") :translation (.80 0 0))


;; Blocks
(:object "block-a"  :class ("block" "green") :translation (0 -.25 .05) :parent "front-table")
(:object "block-b"  :class ("block" "green") :translation (0 -.45 .05) :parent "front-table")


;;;;;;;;;;;;;
;;; Goals ;;;
;;;;;;;;;;;;;

(:goal "block-b" :translation (0 -.25 .05) :parent "front-table")
(:goal "block-a" :translation (0 -.45 .05) :parent "front-table")

